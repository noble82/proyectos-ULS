<pmbtabs>
	<!--
		tab #Onglet à afficher
			@name : nom de l'onglet
			@label : libellé de l'onglet
			@contentType (records|authorities) : type de contenu de l'onglet
			@for : autorité à laquelle appartient cet onglet (common pour afficher dans toutes les autorités)
			authorityType #Dans le cas d'un onglet qui affiche des autorités, spécifie le type d'autorité à afficher, utilise les constantes AUT_TABLE_{authority}
			query #Requête associée
				@getConcepts (true|false) : indique si la requête doit s'effectuer sur les concepts utilisant l'autorité, plutôt que sur l'autorité elle-même. False par défaut.
				select #Champ de la table contenant les identifiants des éléments à afficher dans l'onglet
				table #Nom de la table
				join #Jointure
					table #Nom de la table à joindre
					referenceField #Champ de la table de référence à utiliser pour la jointure
					externalField #Champ de la table à joindre à utiliser pour la jointure
					condition #Condition supplémentaire à appliquer sur la jointure
				elementField #Champ de la table à comparer avec l'identifiant de l'autorité courante (répétable)
				conceptField #Si getConcepts est à true, champ de la table à comparer avec les identifiants de concepts récupérés
				condition #Condition supplémentaire à appliquer sur la requête
				order #Tri à appliquer au résultat de la requête
					table #Table à joindre contenant le champ sur lequel appliquer le tri
					field #Champ sur lequel appliquer le tri
					referenceField #Champ de la table de référence à utiliser pour la jointure
					externalField #Champ de la table à joindre à utiliser pour la jointure
			filters #Filtres à appliquer au contenu de l'onglet
				filter #Filtre à appliquer au contenu de l'onglet
					@name : nom du filtre
					@label : libellé du filtre
					@type (marc_list | callable) : type de filtre
					marcName #Dans le cas d'un type marc_list, nom du fichier marc_list à utiliser
					field #Dans le cas d'un type marc_list, nom du champ de la table correspondant au code du marc_list à récupérer dans la table
					class #Dans le cas d'un type callable, classe à appeler
					method #Dans le cas d'un type callable, méthode à appeler
			callable #Callable associé
				class #Classe à appeler
				method #Méthode à appeler
	 -->
	<!-- Auteurs -->
	<tab name="author_records" label="msg:130" contentType="records" for="author">
		<query>
			<select>responsability_notice</select>
			<table>responsability</table>
			<elementField>responsability_author</elementField>
			<order>
				<table>notices</table>
				<field>index_sew</field>
				<referenceField>responsability_notice</referenceField>
				<externalField>notice_id</externalField>
			</order>
		</query>
		<filters>
			<filter name="author_records_per_function" label="msg:authority_tabs_author_records_by_functions" type="marc_list">
				<marcName>function</marcName>
				<field>responsability_fonction</field>
			</filter>
			<filter name="author_records_per_role" label="msg:authority_tabs_author_records_by_roles" type="callable">
				<class>authority_tabs_author</class>
				<method>get_author_records_per_role</method>
			</filter>
		</filters>
	</tab>
	<tab name="author_oeuvres" label="msg:aut_menu_titre_uniforme" contentType="authorities" for="author">
		<authorityType>AUT_TABLE_TITRES_UNIFORMES</authorityType>
		<query>
			<select>responsability_tu_num</select>
			<table>responsability_tu</table>
			<elementField>responsability_tu_author_num</elementField>
			<order>
				<table>titres_uniformes</table>
				<field>index_tu</field>
				<referenceField>responsability_tu_num</referenceField>
				<externalField>tu_id</externalField>
			</order>
		</query>
		<filters>
			<filter name="author_tu_per_function" label="msg:authority_tabs_author_tu_by_functions" type="marc_list">
				<marcName>function</marcName>
				<field>responsability_tu_fonction</field>
			</filter>
			<filter name="author_tu_per_role" label="msg:authority_tabs_author_tu_by_roles" type="callable">
				<class>authority_tabs_author</class>
				<method>get_author_tu_per_role</method>
			</filter>
		</filters>
	</tab>
